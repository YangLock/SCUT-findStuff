/* pages/find/release/things.wxss */
image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 4%;
}

.add-image, .up-pic image {
  margin-top: 2%;
  margin-left: 2%;
  width: 150rpx;
  height: 150rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 95%;
  text-align: center;
  background-color: #fff;
  cursor: pointer;
  border-radius: 10rpx;
}

.picture_list {
  padding: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture_item {
  margin: 10px;
  margin-left: 0;
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
}
#words{
  margin-left: 38rpx;
  font-size: 20rpx;
  color: #707070;
}
#plus{
  color: #515151;

}
.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 167rpx;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 12px;
}

.picture_item image {
  width: 160rpx;
  height: 160rpx;
}

.yes-upload {
  color: #fff;
  background-color: #00a0e9;
  border-radius: 36rpx;
}
.search{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items: center;
  width:75%;
  /* height:60rpx; */
  margin-right: 20rpx;
  border:1rpx solid #707070;
  border-radius: 12rpx;
}
.discribe{
  display:flew;
  margin: 20rpx;
  height: 300rpx;
  border:1rpx solid #707070;
  border-radius: 10rpx;
}
.section{
  display: flex;
  flex-direction: row-reverse;
  margin: 40rpx;
}
.btn-stytle{
  background-color: #F29C13;
  height: 39px;
  width: 132px;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.big-text{
  font-size: 20px;
  color: #707070;
  margin: 10rpx;
}
.small-text{
  font-size: 15px;
  color: #707070;
}
input{
  margin-left: 10rpx;
}
textarea{
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.select_box{
  background: #fff;
  width: 504rpx;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 15px;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 999;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 15px;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}
.drop-list{
  display: flex;
  flex-direction: row;
  margin-left: 106rpx;
}