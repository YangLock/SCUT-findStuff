  height: 400rpx;
  margin-left: 52rpx;
  border-radius: 15rpx;
  border: 1rpx solid #B2B2B2;
  margin-top: 35rpx;
}
.firstTitle{
  font-size: 30rpx;
  color: #707070;
  margin-left: 20rpx;
}
.icons{
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
#goodsText{
  font-size: 25rpx;
