.userinfo{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  margin-left: 40rpx;
}
.userAvatar{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userName{
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.buttonClass{
  margin-top: 40rpx;
}
#checkMessage{
  border-radius: 20rpx;
  width: 650rpx;
  height: 40rpx;
  background-color: #F4F4F4;
  border: 1rpx solid #B2B2B2;
  display: table;
}
.button-hover{
  background-color: rgb(32, 134, 230);
}
.buttonMessage{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.buttonMessage image{
  height: 30rpx;
  width: 30rpx;
  margin-top: 15rpx;
}
.buttonMessage text{
  vertical-align: middle;
  display: table-cell;
  font-size: 24rpx;
}
.myGoods{
  height: 100rpx;
  width: 100rpx;
}
.myPeople{
  height: 100rpx;
  width: 100rpx;
}
.buttonStuff{
